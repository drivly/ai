{
  "extends": "../../pkgs/tsconfig/src/base.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "dist",
    "jsx": "react",
    "resolveJsonModule": true,
    "composite": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["index.ts", "types.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
