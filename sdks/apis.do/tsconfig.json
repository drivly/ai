{
  "extends": "../../pkgs/tsconfig/src/test.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "incremental": true,
    "composite": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["index.ts", "types.ts", "src/**/*.ts", "src/**/*.tsx", "src/utils/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
