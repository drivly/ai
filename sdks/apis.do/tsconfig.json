{
  "extends": "tsconfig/src/sdk.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "incremental": true,
    "composite": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["index.ts", "types.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
