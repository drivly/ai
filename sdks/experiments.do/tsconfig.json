{
  "extends": "tsconfig/src/sdk.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": ["index.ts", "types.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "tests"]
}
