{
  "extends": "tsconfig/src/sdk.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "noEmit": false,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
