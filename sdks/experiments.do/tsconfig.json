{
  "extends": "tsconfig/src/sdk.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "noEmit": false,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "apis.do": ["../apis.do", "../apis.do/dist"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"],
  "references": [{ "path": "../apis.do" }]
}
