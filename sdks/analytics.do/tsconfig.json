    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*", "types.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
