{
  "name": "workers-do",
  "version": "0.0.1",
  "description": "Cloudflare Workers for Platforms dispatch worker",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=neutral",
    "build:outbound": "esbuild src/outbound.ts --bundle --outfile=dist/outbound.js --format=esm --platform=neutral",
    "build:wrapper": "esbuild src/wrapper.ts --bundle --outfile=dist/wrapper.js --format=esm --platform=neutral",
    "build:all": "pnpm build && pnpm build:outbound && pnpm build:wrapper",
    "dev": "wrangler dev src/index.ts",
    "dev:outbound": "wrangler dev --config outbound-wrangler.toml",
    "deploy": "pnpm build && wrangler deploy",
    "deploy:outbound": "pnpm build:outbound && wrangler deploy --config outbound-wrangler.toml",
    "deploy:all": "pnpm build:all && pnpm deploy && pnpm deploy:outbound",
    "test": "vitest run"
  },
  "dependencies": {
    "hono": "^4.7.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240320.1",
    "esbuild": "^0.20.2",
    "typescript": "^5.7.3",
    "vitest": "^1.4.0",
    "wrangler": "^4.2.0"
  }
}
