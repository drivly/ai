{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "traceResolution": false,
    "outDir": "",
    "target": "esnext",
    "module": "esnext",
    "types": ["@types/node", "@types/service-worker-mock", "./worker-configuration.d.ts", "geolib"]
  },
  "exclude": ["node_modules", "dist", "tests"],
  "include": ["src"]
}
