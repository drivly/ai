{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/models.js", "./src/models.d.ts", "./generate/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "build/**/*.ts", "src/demo.ts"]
}
