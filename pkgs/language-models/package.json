{
  "name": "language-models",
  "version": "0.1.0",
  "description": "Language model abstractions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "dotenvx run -- npx tsx watch src/demo.ts",
    "build": "rimraf dist && tsc && rimraf dist/models.d.ts && copyfiles -u 1 src/models.d.ts dist/",
    "generate:models": "npx tsx generate/build-models.ts && pnpm build",
    "clean": "rimraf dist",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm clean && pnpm build",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "cli": "npx tsx src/cli.ts"
  },
  "type": "module",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "copyfiles": "^2.4.1",
    "eslint-config": "0.1.0",
    "rimraf": "^6.0.1",
    "tsconfig": "0.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@types/node": "^22.13.10",
    "camelcase": "^8.0.0",
    "flat": "^6.0.1",
    "vitest": "^3.0.9"
  }
}
