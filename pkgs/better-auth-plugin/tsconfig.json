{
  "extends": "../../pkgs/tsconfig/src/nextjs.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["**/dist", "node_modules"],
  "references": [],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
