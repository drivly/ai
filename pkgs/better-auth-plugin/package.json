{
  "name": "@payload-auth/better-auth-plugin",
  "scope": "payload-auth",
  "description": "A Payload CMS plugin for Better Auth",
  "version": "1.1.8",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./client": {
      "import": "./dist/payload/exports/client.js",
      "types": "./dist/payload/exports/client.d.ts",
      "default": "./dist/payload/exports/client.js"
    },
    "./rsc": {
      "import": "./dist/payload/exports/rsc.js",
      "types": "./dist/payload/exports/rsc.d.ts",
      "default": "./dist/payload/exports/rsc.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ],
      "types": [
        "dist/types.d.ts"
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./tsconfig.tsbuildinfo",
    "build": "pnpm clean && pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --project tsconfig.json",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "lint": "eslint",
    "lint:fix": "eslint ./src --fix"
  },
  "keywords": [
    "payload-cms",
    "better-auth",
    "plugin",
    "authentication",
    "payload-plugin"
  ],
  "author": "Forrest Devs <luke.gannon@me.com>",
  "license": "MIT",
  "devDependencies": {
    "@drivly/ui": "workspace:*",
    "@payloadcms/ui": "^3.32.0",
    "@radix-ui/react-checkbox": "1.1.4",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-slot": "1.1.2",
    "@swc-node/register": "1.10.9",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.8",
    "@swc/jest": "^0.2.37",
    "@types/jest": "29.5.12",
    "@types/node": "^22.13.10",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "lucide-react": "0.482.0",
    "next": "15.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sonner": "2.0.1",
    "tailwind-merge": "3.0.2",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@better-auth/utils": "0.2.4",
    "@drivly/ui": "workspace:*",
    "@payload-auth/better-auth-db-adapter": "workspace:*",
    "@payloadcms/ui": "^3.32.0",
    "@radix-ui/react-checkbox": "1.1.4",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-slot": "1.1.2",
    "better-auth": "1.2.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "jose": "^6.0.10",
    "lucide-react": "0.482.0",
    "payload": "^3.32.0",
    "sonner": "2.0.1",
    "tailwind-merge": "3.0.2",
    "uncrypto": "^0.1.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "registry": "https://registry.npmjs.org/"
}
