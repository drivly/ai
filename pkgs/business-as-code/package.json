{
  "name": "business-as-code",
  "version": "0.0.1",
  "type": "module",
  "description": "Build, define, launch, experiment, iterate, and grow your business entirely in code.",
  "homepage": "https://business-as-code.dev",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=cjs && esbuild src/index.ts --bundle --platform=node --outfile=dist/index.mjs --format=esm && tsc --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "test": "echo \"No tests\" && exit 0"
  },
  "keywords": [
    "ai",
    "business",
    "strategy",
    "operations",
    "automation",
    "sdk",
    "typescript"
  ],
  "dependencies": {
    "workflows.do": "0.0.1",
    "functions.do": "0.0.1",
    "apis.do": "0.0.1",
    "ai-functions": "0.3.0",
    "ai-workflows": "0.1.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.0.0",
    "esbuild": "^0.19.12"
  },
  "author": "Drivly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drivly/ai.git",
    "directory": "pkgs/business-as-code"
  },
  "bugs": {
    "url": "https://github.com/drivly/ai/issues"
  },
  "engines": {
    "node": ">=22"
  }
}
