{
  "name": "@drivly/better-payload-auth",
  "scope": "payload-auth",
  "description": "A Payload CMS plugin for Better Auth",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./adapter": {
      "import": "./dist/adapter/index.js",
      "types": "./dist/adapter/index.d.ts",
      "default": "./dist/adapter/index.js"
    },
    "./plugin": {
      "import": "./dist/plugin/index.js",
      "types": "./dist/plugin/index.d.ts",
      "default": "./dist/plugin/index.js"
    },
    "./plugin/client": {
      "import": "./dist/plugin/payload/exports/client.js",
      "types": "./dist/plugin/payload/exports/client.d.ts",
      "default": "./dist/plugin/payload/exports/client.js"
    },
    "./plugin/rsc": {
      "import": "./dist/plugin/payload/exports/rsc.js",
      "types": "./dist/plugin/payload/exports/rsc.d.ts",
      "default": "./dist/plugin/payload/exports/rsc.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ],
      "types": [
        "dist/types.d.ts"
      ]
    }
  },
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./tsconfig.tsbuildinfo",
    "build": "pnpm clean && pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --project tsconfig.json",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist",
    "lint": "eslint",
    "lint:fix": "eslint ./src --fix",
    "test": "vitest"
  },
  "keywords": [
    "payload-cms",
    "better-auth",
    "plugin",
    "authentication",
    "payload-plugin"
  ],
  "author": "Forrest Devs <luke.gannon@me.com>",
  "license": "MIT",
  "devDependencies": {
    "@payloadcms/db-mongodb": "^3.33.0",
    "@payloadcms/db-postgres": "^3.33.0",
    "copyfiles": "^2.4.1",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.13",
    "@types/node": "^20.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "5.8.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@better-auth/utils": "0.2.4",
    "@payloadcms/ui": "^3.33.0",
    "@radix-ui/react-checkbox": "1.1.4",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-slot": "1.2.0",
    "better-auth": "1.2.7",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "jose": "^6.0.10",
    "lucide-react": "0.482.0",
    "payload": "^3.33.0",
    "sonner": "2.0.1",
    "tailwind-merge": "3.0.2",
    "uncrypto": "^0.1.3"
  },
  "peerDependencies": {
    "payload": "^3.32",
    "next": "^15.2",
    "react": "^19",
    "react-dom": "^19"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "registry": "https://registry.npmjs.org/"
}
