{
  "compilerOptions": {
    "baseUrl": "..",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ES2022",
    "declaration": true
  },
  "include": ["*.ts"]
}
