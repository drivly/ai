{
	"extends": "../../pkgs/tsconfig/src/base.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"emitDeclarationOnly": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["**/dist", "node_modules"],
	"references": [],
	"include": ["src/index.ts", "src/types.ts", "src/**/*.ts"]
}
