{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"noErrorTruncation": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"emitDeclarationOnly": true,
		"target": "ES2022",
		"composite": true,
		"declaration": true,
		"declarationMap": true
	},
	"exclude": ["**/dist", "node_modules"],
	"references": [],
	"include": ["src/index.ts", "src/types.ts", "src/**/*.ts"]
}
