{
  "name": "mdxld",
  "version": "0.1.0",
  "description": "Markdown & MDX Parser with YAML-LD Frontmatter Support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./ast": {
      "types": "./dist/ast.d.ts",
      "import": "./dist/ast.mjs",
      "require": "./dist/ast.js"
    },
    "./parser": {
      "types": "./dist/parser.d.ts",
      "import": "./dist/parser.mjs",
      "require": "./dist/parser.js"
    }
  },
  "scripts": {
    "build": "pnpm run build:contexts && tsup",
    "build:packages": "pnpm run build:contexts && tsup",
    "build:contexts": "tsx scripts/build-contexts.ts",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "test": "pnpm run build:contexts && vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "markdown",
    "mdx",
    "yaml",
    "yaml-ld",
    "frontmatter",
    "linked-data",
    "ast"
  ],
  "author": "AI Primitives",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drivly/ai"
  },
  "bugs": {
    "url": "https://github.com/drivly/ai/issues"
  },
  "homepage": "https://mdx.org.ai",
  "dependencies": {
    "json5": "^2.2.3",
    "jsonld": "^8.3.2",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx": "^3.1.0",
    "remark-mdxld": "^0.1.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jsonld": "^1.5.15",
    "@types/mdast": "^4.0.4",
    "eslint": "^8.56.0",
    "tsconfig": "workspace:*",
    "tsup": "^8.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
