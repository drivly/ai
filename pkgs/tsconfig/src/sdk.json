{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "SDK",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "noEmit": false,
    "incremental": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "apis.do": ["../../sdks/apis.do/dist/index"],
      "apis.do/types": ["../../sdks/apis.do/dist/types"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
