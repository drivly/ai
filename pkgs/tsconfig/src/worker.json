{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Cloudflare Worker",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext"],
    "types": [
      "./.wrangler/types/runtime.d.ts"
    ],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "worker-configuration.d.ts"],
  "exclude": ["node_modules"]
}
