{
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "test": "vitest run"
  },
  "workspaces": [
    "api/*",
    "docs",
    "data",
    "dash",
    "sdk/*",
    "web/*",
    "pkgs/*",
    "workflows"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 180,
    "semi": false,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": true
  },
  "devDependencies": {
    "vitest": "^3.0.9"
  }
}
