{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@payload-config": ["payload.config.ts"],
      "@/.velite/*": [".velite/*"],
      "@/.velite/content": [".velite/content"],
      "payload-utils": ["./pkgs/payload-utils/src"],
      "payload-hooks-queue": ["./pkgs/payload-hooks-queue/src"],
      "@/domains.config": ["./config/domains.config.ts"],
      "@/api.config": ["./config/api.config.ts"],
      "@/ai.config": ["./config/ai.config.ts"],
      "@/velite.config": ["./config/velite.config.ts"],
      "@/sentry.edge.config": ["./config/sentry.edge.config.ts"],
      "@/sentry.server.config": ["./config/sentry.server.config.ts"]
    },
    "target": "ES2022",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "mdx-components.ts", ".velite/**/*.ts", "types/**/*.d.ts", "content/databases/index.mdx"],
  "exclude": ["node_modules", "workers", "pkgs", "websites"]
}
